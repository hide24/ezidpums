      <tr id="attr-sp-<%= service_provider.id %>">
        <td><%= service_provider.name %></td>
        <td>
        <%= service_provider.ldap_attributes.order(:id).map{|ldap_attribute| ldap_attribute.name}.join(', ') -%>&nbsp;
        </td>
        <td>
          <%= link_to 'Show', service_provider, remote: true, class: "btn btn-sm btn-secondary" %>
          <%= link_to 'Edit', edit_ldap_attribute_assign_path(service_provider), remote: true, class: "btn btn-sm btn-secondary" %>
          <%= link_to 'Remove all attributes', {controller: :ldap_attribute_assigns, action: :destroy, id: service_provider}, remote: true, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
