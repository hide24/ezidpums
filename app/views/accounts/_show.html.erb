<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">Account</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <div class="modal-body">
<p id="notice"><%= notice %></p>

<% LdapAttribute.order(:order).each do |ldap_attribute| -%>
<div class="form-group field">
  <strong><label class="control-label col-lg-2"><%= ldap_attribute.name %></label></strong>
  <div class="form-control">
<% if ldap_attribute.field_type.display -%>
    <%= ldap_attribute.field_type.display %>
<% else -%>
    <%= @account.send(ldap_attribute.name.to_sym) %>
<% end -%>
  </div>
</div>
<% end -%>

  </div>

  <div class="modal-footer actions">
    <button type="button" class="btn btn-secondary" data-dismiss="modal" >Close</button>
  </div>
  </div>
</div>
