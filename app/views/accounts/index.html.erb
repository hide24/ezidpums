<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Mail</th>
      <th>UID</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <%= render "tr", account: account %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path, remote: true, class: "btn btn-lg btn-primary" %>
<div id="account-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
