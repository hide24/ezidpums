<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">Service Provider</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
<%= form_with(model: service_provider, remote: true) do |form| %>
    <div class="modal-body">
    <%= render "modal_error", service_provider: service_provider %>

    <div class="form-group field">
      <strong><%= form.label :name, class: 'control-label col-lg-2' %></strong>
      <%= form.text_field :name, id: :service_provider_name, class: "form-control" %>
    </div>

    <div class="form-group field">
      <strong><%= form.label :entity_id, 'EntityID', class: 'control-label col-lg-2' %></strong>
      <%= form.text_field :entity_id, id: :service_provider_entity_id, class: "form-control" %>
    </div>

    <div class="form-group field">
      <strong><%= form.label :metadata, class: 'control-label col-lg-2' %></strong>
      <%= form.text_area :metadata, id: :service_provider_metadata, rows: 10, class: "form-control" %>
    </div>

    <div class="checkbox field">
      <strong><%= form.label :enable, class: 'control-label col-lg-2' %></strong>
      <%= form.check_box :enable, id: :service_provider_enable %>
    </div>
  </div>

  <div class="modal-footer actions">
    <button type="button" class="btn btn-secondary" data-dismiss="modal" >Close</button>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
  </div>
</div>
