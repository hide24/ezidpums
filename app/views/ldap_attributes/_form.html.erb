<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">LDAP attribute</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
<%= form_with(model: ldap_attribute, remote: true) do |form| %>
    <div class="modal-body">
    <%= render "modal_error", ldap_attribute: ldap_attribute %>

    <div class="form-group field">
      <strong><%= form.label :order %></strong>
      <%= form.number_field :order, id: :ldap_attribute_order, class: "form-control"  %>
    </div>

    <div class="form-group field">
      <strong><%= form.label :name %></strong>
      <%= form.text_field :name, id: :ldap_attribute_name, class: "form-control"  %>
    </div>

    <div class="form-group field">
      <strong><%= form.label :field_type %></strong>
      <%= form.select( :field_type_id, FieldType.options, {prompt: 'select one'}, {id: :ldap_attribute_field_type, class: "form-control"} ) %>
    </div>

    <div class="checkbox field">
      <strong><%= form.label :enable %></strong>
      <%= form.check_box :enable, id: :ldap_attribute_enable %>
    </div>
  </div>

  <div class="modal-footer actions">
    <button type="button" class="btn btn-secondary" data-dismiss="modal" >Close</button>
    <%= form.submit class: "btn btn-primary"%>
  </div>
<% end %>
